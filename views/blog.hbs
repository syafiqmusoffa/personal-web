        <!-- CREATE BLOG -->
        <form id="create-blog" class="create-blog-form" onsubmit="addBlog(event)">
            <h1>Create Blog</h1>
      
            <div class="input-group mb-3">
              <!-- <span class="input-group-text" id="title">Title</span> -->
              <input 
              id="title"
              type="text" 
              class="form-control" 
              aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"
              placeholder="Title"
              required>
            </div>
            
      
            <div class="input-group mb-3">
              <!-- <span class="input-group-text" >Content</span> -->
              <textarea 
              id="content" 
              class="form-control" 
              aria-label="content" 
              rows="6" 
              placeholder="Content"
              required></textarea>
            </div>
      
            <div class="input-group mb-3">
              <input 
              type="file" 
              class="form-control" 
              id="image" required>             
            </div>
      
