{{#> layout currentPage='Blog'}}

<!-- BLOG LIST -->
<h1 style="text-align: center; margin-top: 30px;">My Blog</h1>
<div class="create-blog">
  <a href="/blog-create" class="blog-post-button"> Create Blog </a>
</div>
<section id="blogList" class="blog-list" style="background-color: white">
  <div class="v1"></div>

  </article>
</section>

{{#each blogs}}
<section id="blogList" class="blog-list" style="background-color: white">
  <div class="v1"></div>
  <article class="blog-item">
    <div class="blog-item-img">
      <img src="{{this.image}}" alt="" />
    </div>
    <div class="blog-item-text">
      <div class="blog-item-buttons">
        <a href="/blog-edit/{{@index}}" class="btn btn-primary"> Edit </a>
        <form style="display: inline;" action="/blog/{{@index}}?_method=Delete" method="post">
          <button onclick="return confirm ('Are you sure you want to delete?')" class="deleteBlogButton btn btn-danger"
            type="submit">Delete</button>
        </form>
      </div>

      <a href="blog/{{@index}}" style="text-decoration: none;">
        <h1 class="blog-item-title">{{this.title}} </h1>
      </a>


      <p>{{formatDateToWib this.postedAt}} | {{this.author}}</p>

      <p>{{this.content}}</p>
      <p class="blog-item-relative-time">{{getRelativeTime this.postedAt}}</p>
    </div>
  </article>
</section>
{{/each}}
{{!--
<script src="/js/blog.js"></script> --}}
{{/layout}}