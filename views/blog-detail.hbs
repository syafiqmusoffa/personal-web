{{#> layout currentPage='Blog'}}

<!-- Blog Detail Section -->
<article class="blog-detail">
  <h1>{{blog.title}}</h1>
  <p>{{formatDateToWib blog.createdAt}} | {{blog.authorId}}</p>
  <img src="{{blog.image}}" alt="blog-image" />
  <p class="mt-3" style="text-align: justify;">{{blog.content}} </p>
</article>

{{/layout}}